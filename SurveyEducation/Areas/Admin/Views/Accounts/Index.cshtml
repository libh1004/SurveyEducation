@model PagedList.IPagedList<SurveyEducation.Models.Account>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Index";
}

<h2 class="ms-4 mt-2">Index</h2>

@using (Html.BeginForm("Index", "Accounts", FormMethod.Get))
{
    <p class="ms-4">
        Find by keyword: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

<p class="ms-4">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
